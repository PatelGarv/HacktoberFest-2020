#include<stdio.h>
#include<conio.h>

int main()
{
	int n,a,bit,i,l,j;
	char decimal[64];
	
	printf("Enter bit number:\n");
	scanf("%d",&bit);
	
	printf("Enter Decinal number:\n");
	scanf("%d",&a);
	n = a;
	
	for(i=0;n>0;i++)
	{
		decimal[i] = n%2;
		n = n/2;
	}
	
	for(i=i;i<bit;i++)
	{
		decimal[i] = 0;
	}
	
	/*for(i=i-1;i>=0;i--)
	{
		printf("%d",decimal[i]);
	}
	*/
	// now for 2's compliment
	
	for(l=0;l<=bit-1;l++)
	{
		if(decimal[l] == '1' )
			break;
	}
	for(j = l+1;j<=bit-1;j++)
	{
		if(decimal[j]=='1')
		{
			decimal[j] = '0';
		}else{
			decimal[j] = '1';
		}
	}
	for(i=0;i<bit;i++)
	{
		printf("%d",decimal[i]);
		
	}
	
	return 0;
}